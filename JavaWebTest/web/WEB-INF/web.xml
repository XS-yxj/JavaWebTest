<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">



<!--1. 设置超时时间（分钟），并非标准时间（约）。-->
<!--2. 计时开始于最后一次点击，并非关闭浏览器。-->
<!--3. 0为不限时；Tomcat默认30分钟-->
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>

<!--指定error处理页面-->
    <error-page>
        <error-code>404</error-code>
        <location>/error/isError.html</location>
    </error-page>


<!-- ********************过滤器链根据注册顺序进行排序******************* -->

    <!--[1]error过滤器,该过滤器可以捕捉错误（需要放行）-->
    <filter>
    <filter-name>ErrorFilter</filter-name>
    <filter-class>com.filter.ErrorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ErrorFilter</filter-name>
        <!--<url-pattern>/*</url-pattern>-->
        <url-pattern>/error/isError.html</url-pattern>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <!--[2]非法请求过滤，避免非登录用户访问不合理的页面-->
    <filter>
        <filter-name>IllegalReauestFilter</filter-name>
        <filter-class>com.filter.IllegalRequestFilter</filter-class>
        <init-param>
            <param-name>DefaultEncoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
        <init-param>
            <param-name>noUrlPatterns</param-name>
            <param-value>error;base;res;index.jsp;signIn_failure.jsp;SignInServlet</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>IllegalReauestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>





</web-app>