    <!--1. 设置超时时间（分钟），并非标准时间（约）。-->
    <!--2. 计时开始于最后一次点击，并非关闭浏览器。-->
    <!--3. 0为不限时；Tomcat默认30分钟-->
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>

    <!--指定error处理页面-->
    <error-page>
        <error-code>404</error-code>
        <location>/error/isError.html</location>
