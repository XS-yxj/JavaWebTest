    <!--注册配置验证码kaptcha组件, 自定义数字相加验证码-->
    <servlet>
        <servlet-name>kaptcha</servlet-name>
        <servlet-class>com.servlet.KaptchaServlet</servlet-class>
        <init-param>
            <param-name>kaptcha.border</param-name>
            <param-value>no</param-value>
        </init-param>
        <init-param>
            <param-name>kaptcha.background.clear.from</param-name>
            <param-value>green</param-value>
        </init-param>
        <init-param>
            <param-name>kaptcha.background.clear.to</param-name>
            <param-value>white</param-value>
        </init-param>
        <init-param>
            <description>验证码长度</description>
            <param-name>kaptcha.textproducer.char.length</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <description>验证码值</description>
            <param-name>kaptcha.textproducer.char.string</param-name>
            <param-value>0123456789</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>kaptcha</servlet-name>
        <url-pattern>/randomcode.jpg</url-pattern>
    </servlet-mapping>







    <!-- ********************过滤器链根据注册顺序进行排序******************* -->

    <!--[1]error过滤器,该过滤器可以捕捉错误（需要放行）-->
    <filter>
        <filter-name>ErrorFilter</filter-name>
        <filter-class>com.filter.ErrorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ErrorFilter</filter-name>
        <!--<url-pattern>/*</url-pattern>-->
        <url-pattern>/error/isError.html</url-pattern>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>


    <!--[2]字符编码-->
    <!--似乎导致IEDA出现bug，无法快捷调用浏览器-->
    <filter>
        <filter-name>DefaultEncodingFilter</filter-name>
        <filter-class>com.filter.DefaultEncodingFilter</filter-class>
        <init-param>
            <param-name>DefaultEncoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>DefaultEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


